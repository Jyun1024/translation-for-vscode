{
  "name": "translation-for-vscode",
  "displayName": "Translation for VSCode",
  "description": "Translation for VSCode是一个基于 VSCode 的翻译插件。它集成了有道翻译、百度翻译、DeepL 翻译、OpenAI 翻译等众多翻译引擎，在你的 IDE 内随时对想要翻译的文本、代码注释、代码文档等进行翻译。",
  "version": "0.0.2",
  "publisher": "Jyun",
  "icon": "logo.png",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jyun1024/translation-for-vscode.git"
  },
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "Translation for VSCode",
      "properties": {
        "translation-for-vscode.apiKey": {
          "type": "string",
          "default": "youdao:public-apikey-spider",
          "description": "翻译服务的API密钥，目前支持 baidu、youdao、deepl、openai 如使用百度翻译 输入 baidu:XXX..."
        }
      }
    },
    "commands": [
      {
        "command": "translation-for-vscode.translate",
        "title": "翻译选中的文本"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.91.0",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "@typescript-eslint/parser": "^7.11.0",
    "@vscode/test-cli": "^0.0.9",
    "@vscode/test-electron": "^2.4.0",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.4.5",
    "webpack": "^5.92.1",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "axios": "^1.7.2"
  }
}
